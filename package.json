{
  "name": "tsconnect",
  "version": "1.0.0",
  "description": "Your command center to everything Taylor Swift!",
  "main": "main.js",
  "scripts": {
    "dist:windows": "electron-builder --win --publish always",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --mac",
    "dist": "electron-builder --mac --publish always",
    "publish": "./publish.sh",
    "publish:win": "bash publishWindows.sh"
  },
  "repository": "https://github.com/TSConnect/TSConnect.git",
  "keywords": [],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tsconnect.tsconnect",
    "icon": "build/assets/AppIcon.icns",
    "directories": {
      "output": "build"
    },
    "productName": "TSConnect",
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": "build/assets/DMG_Background.tiff",
      "icon": "build/assets/AppIcon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 134,
          "y": 223
        },
        {
          "x": 410,
          "y": 223,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  }
}
