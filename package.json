{
  "name": "tsconnect",
  "version": "0.0.1-beta.4",
  "description": "Your command center to everything Taylor Swift!",
  "main": "main.js",
  "scripts": {
    "dist:windows": "electron-builder --win --publish always",
    "start": "electron .",
    "test": "TSC_TESTING=true electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --mac",
    "dist": "electron-builder --mac --publish always",
    "publish": "./buildAssets/publish.sh",
    "publish:win": "bash buildAssets/publishWindows.sh"
  },
  "repository": "https://github.com/TSConnect/TSConnect.git",
  "keywords": [],
  "author": "TSConnect",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tsconnect.tsconnect",
    "icon": "buildAssets/assets/AppIcon.icns",
    "directories": {
      "output": "build"
    },
    "productName": "TSConnect",
    "win": {
      "icon": "public/assets/img/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "buildAssets/entitlements.mac.plist",
      "entitlementsInherit": "buildAssets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "background": "buildAssets/assets/DMG_Background.tiff",
      "icon": "buildAssets/assets/AppIcon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 134,
          "y": 223
        },
        {
          "x": 410,
          "y": 223,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@electron/osx-sign": "^1.0.5",
    "electron-log": "^5.0.3",
    "electron-updater": "^6.1.7"
  }
}
